@{
    Layout = "_Layout";
}

<div class="jumbotron text-center">
    <h1>Cities of the World</h1>
</div>
<div class="container text-center">
    <h4><a href="/">Go Back</a></h4>
    <div class="row">
        <form action="/cities" method="post">
            <div class="col-md-3">
            <h3>City Name</h3>
            <button type="submit" name="button" value="1"><span class="glyphicon glyphicon-menu-down"></span></button>
            <button type="submit" name="button" value="2"><span class="glyphicon glyphicon-menu-up"></span></button>
            </div>
            <div class="col-md-3">
            <h3>Country Code</h3>
            <button type="submit" name="button" value="3"><span class="glyphicon glyphicon-menu-down"></span></button>
            <button type="submit" name="button" value="4"><span class="glyphicon glyphicon-menu-up"></span></button>
            </div>
            <div class="col-md-3">
            <h3>District</h3>
            <button type="submit" name="button" value="5"><span class="glyphicon glyphicon-menu-down"></span></button>
            <button type="submit" name="button" value="6"><span class="glyphicon glyphicon-menu-up"></span></button>
            </div>
            <div class="col-md-3">
            <h3>Population</h3>
            <button type="submit" name="button" value="7"><span class="glyphicon glyphicon-menu-down"></span></button>
            <button type="submit" name="button" value="8"><span class="glyphicon glyphicon-menu-up"></span></button>
            </div>
        </form>
    </div>
    <hr>
    @foreach (var city in Model)
    {
        <div class="row list">
            <div class="col-md-3">
            <h4>@city.GetCityName()</h4>
            </div>
            <div class="col-md-3">
            <h4>@city.GetCityCountryCode()</h4>
            </div>
            <div class="col-md-3">
            <h4>@city.GetCityDistrict()</h4>
            </div>
            <div class="col-md-3">
            <h4>@city.GetCityPopulation()</h4>
            </div>
        </div>
    }
</div>
